rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para productos
    match /products/{productId} {
      allow read: if true; // Permitir lectura a todos
      allow write: if true; // Permitir escritura a todos (para desarrollo)
      // En producción, podrías restringir: allow write: if request.auth != null;
    }
    
    // Reglas para usuarios
    match /users/{userId} {
      allow read: if true; // Permitir lectura a todos
      allow create: if true; // Permitir crear usuarios (registro)
      allow update: if true; // Permitir actualizar (para desarrollo)
      allow delete: if true; // Permitir eliminar (para desarrollo)
      // En producción:
      // allow create: if request.auth != null;
      // allow update: if request.auth != null && request.auth.uid == userId;
      // allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para citas (appointments)
    match /appointments/{appointmentId} {
      allow read: if true; // Permitir lectura a todos
      allow create: if true; // Permitir crear citas
      allow update: if true; // Permitir actualizar citas (para desarrollo)
      allow delete: if true; // Permitir eliminar citas (para desarrollo)
      // En producción:
      // allow create: if request.auth != null;
      // allow update, delete: if request.auth != null;
    }
    
    // Reglas para disponibilidad (availability)
    match /availability/{availabilityId} {
      allow read: if true; // Permitir lectura a todos (necesario para ver horarios disponibles)
      allow write: if true; // Permitir escritura a todos (para desarrollo - solo admin debería escribir)
      // En producción:
      // allow read: if true;
      // allow write: if request.auth != null; // Solo usuarios autenticados (admin)
    }
    
    // Reglas para envíos (shipments)
    match /shipments/{shipmentId} {
      allow read: if true; // Permitir lectura a todos
      allow create: if true; // Permitir crear envíos
      allow update: if true; // Permitir actualizar envíos
      allow delete: if true; // Permitir eliminar envíos (para desarrollo)
      // En producción:
      // allow create: if request.auth != null;
      // allow update: if request.auth != null;
      // allow delete: if false; // Generalmente no se eliminan envíos
    }
    
    // Regla por defecto: denegar todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


